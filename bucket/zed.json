{
    "version": "0.208.6",
    "description": "Zed is a high-performance, multiplayer code editor from the creators of Atom and Tree-sitter. It's also open source.",
    "homepage": "https://zed.dev/",
    "license": "AGPL-3.0, Apache-2.0, GPL-3.0",
    "architecture": {
        "64bit": {
            "url": "https://github.com/zed-industries/zed/releases/download/v0.208.6/Zed-x86_64.exe",
            "hash": "49d3d04bf5dcfbd2a51dbd846cebcb04fdb0573d29b28644d41d4100c88ca4ee"
        }
    },
    "installer": {
        "script": [
            "Expand-InnoArchive -Path \"$dir\\$fname\" -ExtractDir '{app}'",
            "Expand-InnoArchive -Path \"$dir\\$fname\" -ExtractDir '{code_GetInstallDir}' -Removal"
        ]
    },
    "bin": [
        "bin\\zed",
        "bin\\zed.exe"
    ],
    "persist": "data",
    "post_install": [
        "if (!(Test-Path \"$dir\\data\\extensions\") -and (Test-Path \"$env:LocalAppData\\Zed\")) {",
        "    info '[Portable Mode] Copying user data...'",
        "    Copy-Item \"$env:LocalAppData\\Zed\\*\" \"$dir\\data\" -Recurse",
        "}",
        "if (!(Test-Path \"$dir\\data\\config\") -and (Test-Path \"$env:AppData\\Zed\")) {",
        "    info '[Portable Mode] Copying config...'",
        "    Copy-Item \"$env:AppData\\Zed\" \"$dir\\data\\config\" -Recurse",
        "}"
    ],
    "shortcuts": [
        [
            "zed.exe",
            "Zed",
            "--user-data-dir=\"$dir\\data\""
        ]
    ],
    "checkver": {
        "github": "https://github.com/zed-industries/zed"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/zed-industries/zed/releases/download/v$version/Zed-x86_64.exe"
            }
        }
    }
}
